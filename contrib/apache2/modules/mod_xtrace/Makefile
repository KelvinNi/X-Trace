##
##  Makefile -- Build procedure for sample xtrace Apache module
##  Autogenerated via ``apxs -n xtrace -g''.
##

builddir=.
top_srcdir=/etc/httpd
top_builddir=/usr/lib/httpd
include /usr/lib/httpd/build/special.mk

#   the used tools
APXS=apxs
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
XTRACE=../../../../src/cpp/build
INCLUDES=-I$(XTRACE)/include
LIBS=-L$(XTRACE)/lib -lxtr-cpp

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_xtrace.o mod_xtrace.lo mod_xtrace.slo mod_xtrace.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/xtrace

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

